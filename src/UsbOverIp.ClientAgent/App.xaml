<Application x:Class="UsbOverIp.ClientAgent.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UsbOverIp.ClientAgent"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                        ToolTipText="USB-over-IP Client"
                        TrayMouseDoubleClick="TrayIcon_OnTrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show Window" Click="ShowWindow_OnClick" FontWeight="Bold"/>
                    <Separator/>
                    <MenuItem Header="Discovered Servers" x:Name="ServersMenuItem">
                        <MenuItem Header="No servers found" IsEnabled="False"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Refresh Devices" Click="RefreshDevices_OnClick"/>
                    <Separator/>
                    <MenuItem Header="Start with Windows" x:Name="AutoStartMenuItem" Click="ToggleAutoStart_OnClick" IsCheckable="True"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_OnClick"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
